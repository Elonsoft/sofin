    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "dotenv": "^4.0.0",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-testrpc": "^6.0.3",
    "solium": "^1.1.2",
    "truffle-flattener": "^1.2.0",
    "web3": "^1.0.0-beta.27"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "stage-3"
